#! /bin/bash

set -x

root="$PWD"
deploydir=deploy
mkdir -p ${deploydir}

tar cf all.tar "$@"
#tar cf all.tar -T - # list of files from stdin

cd ${deploydir} || {
  echo "failed to cd the the deploy directory"
  exit
}
tar xf "${root}/all.tar"
# Copy what was extracted in previous step
mv "${root}/extract/"* .

# create README.md
{
  cat <<EOF
Welcome to PLUMED-TESTCENTER!
-----------------------------

EOF
  # add general informations
  cat Info.md
} >README.md
#Â copy the browse file here
cp "${root}/browse.md" .

