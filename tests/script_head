#!/bin/bash

mode="static"
suffix=""
basedir=`pwd`
set -x

# Copying arguments from input
# Mode is how plumed is linked static/runtime
#Â Suffix is which version of plumed to use stable/master
for opt
do
case "$opt" in
  (mode=*) mode="${opt#mode=}" ;;
  (suffix=*) suffix="${opt#suffix=}" ;;
  (*) echo "unknown option $opt" ; exit 1 ;;
esac
done

